,
	<% end %>
]

#  usage: {{fromNow date}}
Ember.Handlebars.registerBoundHelper 'fromNow', (date)->
	moment(date).fromNow()

Ember.Handlebars.registerBoundHelper 'makeTags', (tags)->
	allTags = ""
	tags.forEach (tag) ->
		allTags += "<div class='tool #{tag.toLowerCase()}'>#{tag}</div>"
	new Handlebars.SafeString allTags